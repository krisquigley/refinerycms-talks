<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(teacher) -%>">
  <span class='title'>
    <%= teacher.name.presence %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"),
                refinery.edit_talks_admin_teacher_path(teacher),
                :name => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.talks_admin_teacher_path(teacher),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :data => {
                  :confirm => t('message', :scope => 'refinery.admin.delete', :title => teacher.name)
                } %>
  </span>
  
</li>
