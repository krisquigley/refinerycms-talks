<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(compilation) -%>">
  <span class='title'>
    <%= compilation.title.presence %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"),
                refinery.edit_talks_admin_compilation_path(compilation),
                :name => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.talks_admin_compilation_path(compilation),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :data => {
                  :confirm => t('message', :scope => 'refinery.admin.delete', :title => compilation.title)
                } %>
  </span>

</li>
