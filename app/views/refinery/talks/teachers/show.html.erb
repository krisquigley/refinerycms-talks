<div class="row">
  <div class="col-xs-12 site__hero">
  </div>
</div>
<%= render '/refinery/shared/site_hero', object: @page %>
<%= render '/refinery/shared/second_navigation' %>
<div class="col-xs-12 col-sm-6 col-md-6 content__content">
  <h2>talks</h2>
  <hr/>
  <p class="teacher"><i>by <%= @teacher.name %></i></p>
  <%= render partial: 'refinery/talks/shared/talk', collection: @talks %>
  <%= will_paginate @talks %>
  <% if @compilations.any? %>
    <h3>collections</h3>
    <hr/>
    <% @compilations.each do |compilation| %>
      <p><%= link_to compilation.title, refinery.talks_compilation_path(compilation)  %></p>
    <% end %>
  <% end %>
</div>
</div>
